@model string[]

@{
    Layout = null;
}

<div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/Images/logo.png" /></a>
</div>

<nav class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        @foreach (string menuitem in Model)
            {
            <li>
                @Html.ActionLink(menuitem, "Index", menuitem)
            </li>
        }
    </ul>
    <ul class="nav navbar-nav user-menu">
        <li>
            @Html.ActionLink("Sign Up", "Index", "SignUp")
        </li>
        <li>
            @Html.ActionLink("Sign In", "Index", "UserSignIn", new { area = "Users" }, null)
        </li>
    </ul>
</nav>